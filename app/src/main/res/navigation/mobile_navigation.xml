<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/splashscreenFragment">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.manegow.safeami.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_map"
            app:destination="@+id/nav_map" />
        <action
            android:id="@+id/action_nav_home_to_nav_profile"
            app:destination="@id/nav_profile" />
        <action
            android:id="@+id/action_nav_home_to_nav_friends"
            app:destination="@id/nav_friends" />
        <action
            android:id="@+id/action_nav_home_to_fragmentDevices"
            app:destination="@id/fragmentDevices" />
    </fragment>

    <fragment
        android:id="@+id/nav_map"
        android:name="com.manegow.safeami.ui.map.MapFragment"
        android:label="@string/menu_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_nav_map_to_friendDetails"
            app:destination="@id/friendDetails" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.manegow.safeami.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_login"
        android:name="com.manegow.safeami.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_nav_login_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_login_to_recoverPasswordFragment"
            app:destination="@id/recoverPasswordFragment" />
        <action
            android:id="@+id/action_nav_login_to_nav_singup"
            app:destination="@id/nav_singup" />
    </fragment>

    <fragment
        android:id="@+id/nav_singup"
        android:name="com.manegow.safeami.ui.signup.SignupFragment"
        android:label="Singup"
        tools:layout="@layout/fragment_signup" />

    <fragment
        android:id="@+id/nav_friends"
        android:name="com.manegow.safeami.ui.send.SendFragment"
        android:label="@string/menu_send"
        tools:layout="@layout/fragment_friends" >
        <action
            android:id="@+id/action_nav_friends_to_friendRequestFragment"
            app:destination="@id/friendRequestFragment" />
        <action
            android:id="@+id/action_nav_friends_to_friendDetails"
            app:destination="@id/friendDetails" />
    </fragment>
    <fragment
        android:id="@+id/splashscreenFragment"
        android:name="com.manegow.safeami.ui.splashscreen.SplashscreenFragment"
        android:label="splashscreen_fragment"
        tools:layout="@layout/fragment_splashscreen" >
        <action
            android:id="@+id/action_splashscreenFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_splashscreenFragment_to_nav_login"
            app:destination="@id/nav_login" />
    </fragment>
    <fragment
        android:id="@+id/recoverPasswordFragment"
        android:name="com.manegow.safeami.ui.recoverPassword.RecoverPasswordFragment"
        android:label="Recover Password"
        tools:layout="@layout/fragment_recoverpassword" />
    <fragment
        android:id="@+id/fragmentAddDevice"
        android:name="com.manegow.safeami.ui.adddevice.FragmentAddDevice"
        android:label="fragment_add_device"
        tools:layout="@layout/fragment_add_device" />
    <fragment
        android:id="@+id/fragmentDeviceDetail"
        android:name="com.manegow.safeami.ui.devicedetail.FragmentDeviceDetail"
        android:label="fragment_device_detail"
        tools:layout="@layout/fragment_device_detail" />
    <fragment
        android:id="@+id/fragmentDevices"
        android:name="com.manegow.safeami.ui.devices.FragmentDevices"
        android:label="fragment_devices"
        tools:layout="@layout/fragment_devices" >
        <action
            android:id="@+id/action_fragmentDevices_to_fragmentAddDevice"
            app:destination="@id/fragmentAddDevice" />
        <action
            android:id="@+id/action_fragmentDevices_to_fragmentDeviceDetail"
            app:destination="@id/fragmentDeviceDetail" />
    </fragment>
    <fragment
        android:id="@+id/friendRequestFragment"
        android:name="com.manegow.safeami.ui.friendrequest.FriendRequestFragment"
        android:label="fragment_friend_request"
        tools:layout="@layout/fragment_friend_request" />
    <fragment
        android:id="@+id/friendDetails"
        android:name="com.manegow.safeami.ui.frienddetails.FriendDetails"
        android:label="fragment_friend_details"
        tools:layout="@layout/fragment_friend_details" />
</navigation>